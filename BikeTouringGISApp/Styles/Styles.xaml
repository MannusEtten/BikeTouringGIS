<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BikeTouringGISApp.Styles">
    <Color x:Key="CustomColor">DarkGreen</Color>
    <SolidColorBrush x:Key="ExtendedSplashBackground" Color="{StaticResource CustomColor}"/>
    <SolidColorBrush x:Key="ExtendedSplashForeground" Color="{StaticResource ContrastColor}"/>
    <Style TargetType="ListViewItem" x:Key="listviewitem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="3 1 3 1"/>
    </Style>
</ResourceDictionary>